
<br>

<h2>Update Profile</h2>
<br>

<%= form_for @profile, url: user_profile_path do |f| %>
    <div id="error_group">
      <% if @profile.errors.any? %>
          <h2>
            <%= pluralize(@profile.errors.count, "error")%>prohibited this lesson from being posted:
          </h2>
          <ul>
            <% @profile.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
          </div>
      <% end %>


      <p>
        <%= f.label :username %><br>
        <%= f.text_field :username %>
      </p>

      <p>
        <%= f.label :tagline %><br>
        <%= f.text_field :tagline %>
      </p>

      <p>
        <%= f.label :aboutme %><br>
        <%= f.text_area :aboutme %>
      </p>

      <p>
        <%= f.label :genres %><br>
        <%= f.text_area :genres %>
      </p>

      <p>
        <%= f.submit 'Update', class: "btn btn-success" %>
      </p>

      <br>

<% end %>
