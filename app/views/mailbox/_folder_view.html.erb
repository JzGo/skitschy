<%= render 'shared/navbar' %>
<br><br>
<div class="profile-content col-md-10 col-md-offset-1">


    <div class="row">
      <div class="spacer">
        <!-- we'll configure this to compose new conversations later -->
         <%= link_to "Compose", new_conversation_path, class: "btn btn-success" %><br><br>
      </div>
    </div>

      <div class="col-md-4">
        <div  class="panel panel-default">
          <div class="panel-body">
            <%= render 'mailbox/folders' %>
          </div>
        </div>
      </div>

      <div class="col-md-8">

            <% if is_conversation %>
              <%= render 'conversations/form' %>
            <% else %>
              <%= render partial: 'conversations/conversation', collection: messages %>

            <% end %>
            <!-- individual conversations will show here -->

      </div>

</div>
