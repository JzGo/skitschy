<%= render "shared/navbar" %>
<br><br>
<div class="row profile">
<div class="col-md-3">
  <div class="profile-sidebar">
    <!-- SIDEBAR USERPIC -->
    <div class="profile-userpic">
      <img src="http://keenthemes.com/preview/metronic/theme/assets/admin/pages/media/profile/profile_user.jpg" class="img-responsive" alt="">
    </div>
    <!-- END SIDEBAR USERPIC -->
    <!-- SIDEBAR USER TITLE -->
    <div class="profile-usertitle">
      <div class="profile-usertitle-name">
        <% if @profile.username %>
          Hey, <%= @profile.username %> !
        <% else %>
          Hey, you!
        <% end %>
      </div>
      <div class="profile-usertitle-job">
        <%= link_to 'Edit Profile', edit_user_profile_path(current_user.id, current_user.id), class: "btn"%>

      </div>
    </div>
    <!-- END SIDEBAR USER TITLE -->
    <!-- SIDEBAR BUTTONS -->
    <div class="profile-userbuttons">
      <center>
        <a href="/mailbox/inbox" class="btn btn-success btn-lg">Notes <span class="badge">1</badge></a>

          <br><br>
      <!-- Trigger the modal with a button -->
      <button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#myModal">Write Something! </button>

      <!-- Modal -->
      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-lg">

          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Write a story:</h4>
            </div>
            <div class="modal-body">
              <%= render 'shared/story_form' %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>

        </div>
      </div>

      <center>
    </div>
  </div>
</div>
<div class="col-md-9">
  <div class="profile-content">
    <div class="list-group">
      <% @stories.each do |story| %>
        <a href="/stories/<%= story.id %>" class="list-group-item">
          <h4 class="list-group-item-title"><strong><%= story.title %></strong></h4>
          <h6 class="list-group-item-author"><strong>By:</strong> <%= story.authors %></h6>
          <h6 class="list-group-item-genre"><strong>Genre:</strong> <%= story.genre %></h6>
          <p class="list-group-item-text"><%= story.body %></p>
        </a>
      <% end %>
     </div>
    </div>
  </div>
</div>
